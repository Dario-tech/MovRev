    <application
        android:name=".ColaPeticionesHTTP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourMovieOpinion">
        <activity
            android:name=".ListaPeliculasFav"
            android:exported="false"
            android:label="@string/title_activity_lista_peliculas_fav"
             />
